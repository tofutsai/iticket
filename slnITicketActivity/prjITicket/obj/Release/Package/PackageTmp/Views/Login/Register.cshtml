    @{
        /**/

        ViewBag.Title = "註冊";
    }



    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container_login">
                <div class="signup-content">
                    <div class="signup-content">
                        <div class="signup-form">
                            <h2 class="form-title">註冊帳號</h2>
                            <form method="POST" class="register-form" id="register-form">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @*<div class="form-group">
                                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                        <input type="text" name="name" id="name" placeholder="Your Name" />

                                    </div>*@
                                <div class="form-group">
                                    <label for="email"><i class="zmdi zmdi-email"></i></label>
                                    @*<input type="email" name="email" id="email" placeholder="Your Email" />*@
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Your Email"
                                   , type = "email", id = "e_format", name = "Email", oninput = "CheckMember(this.value)" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    <span id="check"></span>
                                </div>
                                <div class="form-group">
                                    <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                    @*<input type="password" name="pass" id="pass" placeholder="Password" />*@
                                    @Html.PasswordFor(model => model.Password, new { @placeholder = "密碼", id = "test123", oninput = "CheckPassword(this.value)" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", id = "errorpass" })
                                    <span style="color:darkgray" id="CheckPassword">密碼請輸入8-12碼,至少一個英文及數字</span>
                                </div>
                                <div class="form-group">
                                    <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                    @*<input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />*@
                                    @Html.PasswordFor(model => model.Password, new { @placeholder = "再確認密碼", id = "test456", oninput = "NCheckPassword(this.value)" })
                                    <span id="CheckPassword2"></span>
                                </div>
                                <div class="form-group">
                                    <input type="checkbox" name="agreeterm" id="agree-term" class="agree-term" value="true" />
                                    <label for="agree-term" class="label-agree-term"><span><span></span></span>我同意遵守  <a style="color:blue" onclick="hello()" href="#" class="term-service">個人資料蒐集聲明</a></label>
                                </div>
                                <span id="errorval" class="text-danger">@ViewBag.Message</span>
                                <div class="form-group form-button">
                                    <input type="button" name="signup" id="signup" class="form-submit" value="註冊" />
                                </div>
                            </form>
                        </div>
                        <div class="signup-image">
                            <figure><img src="~/Content/Login/images/signup-image.jpg" alt="sing up image"></figure>
                            @*<a href="#" class="signup-image-link">I am already member</a>*@
                            @Html.ActionLink("我已有帳號", "Login", "Login", new { htmlAttributes = new { @class = "signup-image-link" }, style = "font-size:16px;" })
                            @Html.ActionLink("商業註冊", "BussRegister", "Login", new { htmlAttributes = new { @class = "signup-image-link" }, style = "font-size:16px;" })
                        </div>
                    </div>
                </div>
                <a href="#" class="btn btn-secondary" id="demouser">註冊DEMO</a>
            </div>
        </section>

    </div>

    <button id="ContextShow" type="button" class="btn btn-primary invisible position-absolute" data-toggle="modal" data-target="#exampleModalLong">
        Launch demo modal
    </button>

