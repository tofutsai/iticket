@if (member != null)
{
    <script>
        $(function () {
            //SignalR代碼
            var chat = $.connection.chatHub;
            chat.client.getMsgFromSeller = function (msg, companyName) {
                let show = '<div class="d-flex justify-content-start mb-4">' +
                    '<div class="img_cont_msg">' +
                    '<img src="@Url.Content("~/images/Login/Upload/" + icon)" class="rounded-circle user_img_msg">' +
                    '</div>' +
                    '<div class="msg_cotainer" style="max-width:300px">' +
                    msg +
                    `<span class="msg_time">${getTimeString()}</span>` +
                    '</div>' +
                    '</div >';
                $("#chatContent").append(show);
                //讓聊天框滾動條保持在最底部
                let actualHeight = $("#chatContent").get(0).scrollHeight;
                $("#chatContent").scrollTop(actualHeight);
            }
            $.connection.hub.start().done(function () {
                chat.server.join(@member.MemberID, "@member.NickName","非商家");
                $('#sendChat').click(function () {
                    let msg = $("#txtChat").val();
                    if (msg == "") return;
                    $("#txtChat").val("");
                    chat.server.send(msg,@member.MemberID,@seller.MemberId, "customer");
                    let show = '<div class="d-flex justify-content-end mb-4">' +
                        '<div class="msg_cotainer_send" style="max-width:300px">' +
                        msg +
                        `<span class="msg_time_send">${getTimeString()}</span>` +
                        '</div>' +
                        '<div class="img_cont_msg">' +
                        '<img src="@Url.Content("~/images/Login/Upload/" + icon)" class="rounded-circle user_img_msg">' +
                        '</div>' +
                        '</div>';
                    $("#chatContent").append(show);
                    //讓聊天框滾動條保持在最底部
                    let actualHeight = $("#chatContent").get(0).scrollHeight;
                    $("#chatContent").scrollTop(actualHeight);
                });
            });
            //////////////////////////////
        });
        function getTimeString() {
            let date = new Date();
            return `${date.getHours()}:${date.getMinutes()}`;
        }
    </script>
}
