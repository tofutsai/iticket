    <script>
        $(function () {
            @*$("#btnUploadActivity").click(function () {
                $.ajax({
                    type: "get",
                    url: "@Url.Action("GetUploadPage","SellerCenter")",
                    success: function (result) {
                        $("#showContent").html(result);
                    }
                });
            });*@
            $("#btnSellerCenter").click(function () {
                $.ajax({
                    type: "get",
                    url: "@Url.Action("GetActivityListPage", "SellerCenter")",
                    success: function (result) {
                        $("#showContent").html(result);
                    }
                });
            });
        });
    </script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- navbar-brand -->
        
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>   
        <h2 class="text-white">商家中心</h2>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- 會員管理 & 留言板管理 -->
                        <div class="sb-sidenav-menu-heading">Member</div>
                        <a class="nav-link" id="btnUploadActivity" href="@Url.Action("UpLoadActivity","Activity")">
                            <div class="sb-nav-link-icon"><i class="fas fa-address-card"></i></div> 上傳活動
                        </a>
                        <a class="nav-link" id="btnSellerCenter" href="@Url.Action("ManagementCenter","SellerCenter")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 商家管理
                        </a>
                        <a class="nav-link" href="@Url.Action("PackageCenterM","SellerCenter")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 套票管理
                        </a>

                        <!-- 首頁 & 登出 -->
                        <div class="sb-sidenav-menu-heading">Link</div>
                        <a class="nav-link" href="@Url.Action("index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div> iTicket 首頁
                        </a>
                        <a class="nav-link" href="@Url.Action("Logout","Login")">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div> 登出
                        </a>

                    </div>
                </div>
                <!-- sb-sidenav-footer -->
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as:</div>
                   @((Session[CDictionary.SK_Logined_Member] as Member).Seller.FirstOrDefault()?.CompanyName)
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div id="showContent" class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2020</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>

