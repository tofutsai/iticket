<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - iTicket數位行銷整合平台</title>
    <link href="~/Content/BackEnd/css/styles.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">

    <!--<script src="~/Content/BackEnd/node_modules/jquery/dist/jquery.min.js"></script>-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/js/all.min.js" crossorigin="anonymous"></script>

</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- navbar-brand -->
        <a class="navbar-brand" href="@Url.Action("BackEndIndex","BackEndMain")"> <img src="~/Content/BackEnd/image/ITicket_logo2_notext.png" style="width:25%;margin-right:20px"/><label style="font-family: 'Indie Flower', cursive;font-size:30px;cursor: pointer">ITicket</label></a>
        <button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i></button>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <!-- 後臺主畫面 -->
                        <div class="sb-sidenav-menu-heading">首頁</div>
                        <a class="nav-link" href="@Url.Action("BackEndIndex","BackEndMain")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div> 後臺首頁
                        </a>
                        <!-- 會員與文章相關 -->
                        <div class="sb-sidenav-menu-heading">會員與文章相關</div>
                        <a class="nav-link" href="@Url.Action("MemberList","BackEndMember")">
                            <div class="sb-nav-link-icon"><i class="fas fa-address-card"></i></div> 會員管理
                        </a>
                        <a class="nav-link" href="@Url.Action("ArticleList","BackEndArticle")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 留言板管理
                        </a>
                        <a class="nav-link" href="@Url.Action("CommentList","BackEndComment")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 評論管理
                        </a>
                        <!-- 活動 & 訂單 -->
                        <div class="sb-sidenav-menu-heading">活動與訂單相關</div>
                        <a class="nav-link" href="@Url.Action("ActivityMaintain","BackEndActivity")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 活動列表
                        </a>
                        <a class="nav-link" href="@Url.Action("TicketGroupMaintain","BackEndTicketGroup")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 套票列表
                        </a>
                        <a class="nav-link" href="@Url.Action("OrderQuery","BackEndOrder")">
                            <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div> 訂單查詢
                        </a>

                        <!-- 前臺首頁 -->
                        <div class="sb-sidenav-menu-heading">前台首頁</div>
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div> iTicket 首頁
                        </a>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2020</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>



</body>
</html>


<!-- src -->

